<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <TextView
        android:id="@+id/laman_utama"
        android:layout_width="185dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="29dp"
        android:text="@string/laman_utama"
        android:textAlignment="center"
        android:textAppearance="@style/laman_utama"
        android:textStyle="bold" />

        <ImageView
            android:layout_width="41dp"
            android:layout_height="41dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:src="@drawable/mask_group">
        </ImageView>

            <ImageButton
                android:id="@+id/button"
                android:layout_width="48dp"
                android:layout_height="64dp"
                android:layout_marginStart="79dp"
                android:layout_marginTop="133dp"
                android:background="#00000000"
                android:src="@drawable/group11">
            </ImageButton>

            <ImageButton
                android:id="@+id/button1"
                android:layout_width="65dp"
                android:layout_height="64dp"
                android:layout_marginStart="181dp"
                android:layout_marginTop="133dp"
                android:background="#00000000"
                android:src="@drawable/group4">
            </ImageButton>

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="133dp"
        android:background="#00000000"
        android:src="@drawable/group3"></ImageButton>

    <ImageButton
        android:id="@+id/button3"
        android:layout_width="63dp"
        android:layout_height="80dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="278dp"
        android:background="#00000000"
        android:src="@drawable/group12" />

    <ImageButton
        android:id="@+id/button4"
        android:layout_width="58dp"
        android:layout_height="64dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="278dp"
        android:background="#00000000"
        android:src="@drawable/group7"></ImageButton>

    <ImageButton
        android:id="@+id/button5"
        android:layout_width="48dp"
        android:layout_height="64dp"
        android:layout_marginStart="296dp"
        android:layout_marginTop="278dp"
        android:background="#00000000"
        android:src="@drawable/group8"></ImageButton>

            <TextView
                android:id="@+id/sistem_info"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="125dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="730dp"
                android:text="@string/sistem_info"
                android:textAppearance="@style/sistem_info"
                android:gravity="center_horizontal|top"
                />


</RelativeLayout>