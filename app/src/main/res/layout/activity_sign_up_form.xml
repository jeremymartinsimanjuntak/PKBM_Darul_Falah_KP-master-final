<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Log_In_Form">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <EditText

            android:id="@+id/daftar_password"
            android:layout_width="256.5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="316dp"
            android:background="@color/white"
            android:hint="Masukkan Password">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/daftar_email"
            android:layout_width="256.5dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="245dp"
            android:background="@color/white"
            android:hint="Masukkan Username">

        </EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:src="@drawable/mask_group">
    </ImageView>

    <TextView
        android:layout_width="97dp"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="135dp"
        android:gravity="center_horizontal|top"
        android:text="Daftar"
        android:textAppearance="@style/masuk"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pkbm_darul_"
        android:layout_width="142dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:text="PKBM Darul Falah"
        android:textAppearance="@style/pkbm_atas"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/sistem_info"
        android:layout_width="138dp"
        android:layout_height="12dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="58dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:text="Sistem Informasi Akademik"
        android:textAppearance="@style/sia"
        android:gravity="top"
        />

    <TextView
        android:id="@+id/username"
        android:layout_width="66dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="217dp"
        android:gravity="top"
        android:text="USERNAME"
        android:textStyle="italic"
        android:textAppearance="@style/tengah_form_2" />


    <TextView
        android:id="@+id/password"
        android:layout_width="67dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="305dp"
        android:gravity="top"
        android:text="PASSWORD"
        android:textStyle="italic"
        android:textAppearance="@style/tengah_form_2" />


    <TextView
        android:layout_width="111dp"
        android:layout_height="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="77dp"
        android:layout_marginTop="478dp"
        android:gravity="top"
        android:text="Sudah Punya Akun?"
        android:textAppearance="@style/bawah_form" />


    <Button
        android:id="@+id/text_login"
        android:layout_width="72dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="466dp"
        android:background="#00000000"
        android:text="Masuk"
        android:textAppearance="@style/tengah_form"
        android:textColor="#22A2D9" />

    <Button
        android:id="@+id/tbldaftar"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="385dp"
        android:background="#00000000"
        android:text="Daftarkan"
        android:textAppearance="@style/tengah_form"
        android:textColor="#22A2D9" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="411dp"
        android:layout_height="300dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="595dp"
        android:background="@drawable/border_hitam_form" />

    <TextView
        android:layout_width="265dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="605dp"
        android:gravity="top"
        android:text="@string/info_pkbm"
        android:textAppearance="@style/info_pkbm" />

    <ImageView
        android:id="@+id/group_2"
        android:layout_width="88dp"
        android:layout_height="125dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="599dp"
        android:background="#00000000"
        android:src="@drawable/login_pkbm" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="689dp"
        android:textAlignment="center"
        android:text="Hubungi Kami"
        android:textColor="@color/white"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/no_hp_login"
        android:layout_width="80dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="703dp"
        android:textAlignment="center"
        android:text="082138297099"
        android:textColor="#22A2D9"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/email_bawah"
        android:layout_width="150dp"
        android:layout_height="14dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="702dp"
        android:text="pkbmdarulfalah.jepara@gmail.com"
        android:textAlignment="center"
        android:textColor="#22A2D9"
        android:textSize="10sp" />

</RelativeLayout>